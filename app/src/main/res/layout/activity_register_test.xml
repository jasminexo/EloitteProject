<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterTestActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="177dp"
        android:layout_height="149dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dog_logo" />

    <CheckBox
        android:id="@+id/cbTeacher"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Register as Teacher"
        app:layout_constraintEnd_toEndOf="@+id/et_pass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cb_student"
        app:layout_constraintTop_toBottomOf="@+id/et_pass" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/light_brown"
        android:onClick="onClick"
        android:text="Login"
        app:layout_constraintStart_toStartOf="@+id/btn_signup"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_fullname"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="264dp"
        android:backgroundTint="@color/brown_text"
        android:drawableEnd="@drawable/ic_name"
        android:ems="20"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/brown_text"
        android:textColorHint="@color/brown_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_email"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/brown_text"
        android:drawableEnd="@drawable/ic_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/brown_text"
        android:textColorHint="@color/brown_text"
        app:layout_constraintEnd_toEndOf="@+id/et_fullname"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_fullname"
        app:layout_constraintTop_toBottomOf="@+id/et_fullname" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/light_brown"
        android:onClick="onClick"
        android:text="Create Account"
        app:layout_constraintStart_toStartOf="@+id/cb_student"
        app:layout_constraintTop_toBottomOf="@+id/et_pass" />

    <CheckBox
        android:id="@+id/cb_student"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Register as Student"
        app:layout_constraintStart_toStartOf="@+id/et_pass"
        app:layout_constraintTop_toBottomOf="@+id/et_pass" />

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="28dp"
        android:text="MoodZoo"
        android:textColor="@color/brown_text"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_pass"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/brown_text"
        android:drawableEnd="@drawable/ic_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/brown_text"
        android:textColorHint="@color/brown_text"
        app:layout_constraintStart_toStartOf="@+id/et_email"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

</androidx.constraintlayout.widget.ConstraintLayout>