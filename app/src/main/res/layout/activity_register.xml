<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:layout_gravity="center_horizontal"
    android:background="@color/yellow_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow_bg"
        android:layout_marginTop="50sp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/brown_text"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"/>

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="30sp"
            android:contentDescription="@string/todo"
            android:src="@drawable/fox" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_round_corner"
                android:drawableTop="@drawable/innovation"
                android:gravity="center|center_vertical"
                android:onClick="goToPersonalityHome"
                android:paddingTop="15dp"
                android:text="Personality Quizzes"
                android:textAllCaps="false"
                android:textColor="@color/brown_text"
                android:textSize="17sp"
                app:backgroundTint="@color/white" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_fullname"
            android:layout_width="364dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/brown_text"
            android:drawableEnd="@drawable/ic_name"
            android:ems="20"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/brown_text"
            android:textColorHint="@color/brown_text" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_email"
            android:layout_width="364dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/brown_text"
            android:drawableEnd="@drawable/ic_email"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/brown_text"
            android:textColorHint="@color/brown_text"
            app:layout_constraintEnd_toEndOf="@+id/et_fullname"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/et_fullname"
            app:layout_constraintTop_toBottomOf="@+id/et_fullname" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_password"
            android:layout_width="364dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/brown_text"
            android:drawableEnd="@drawable/ic_password"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/brown_text"
            android:textColorHint="@color/brown_text"
            app:layout_constraintStart_toStartOf="@+id/login_email"
            app:layout_constraintTop_toBottomOf="@+id/login_email" />

        <Button
            android:id="@+id/go_to_register"
            android:layout_width="364dp"
            android:layout_height="55dp"
            android:layout_marginTop="56dp"
            android:backgroundTint="@color/light_brown"
            android:text="Create Account"
            app:layout_constraintStart_toStartOf="@+id/cb_student"
            app:layout_constraintTop_toBottomOf="@+id/login_password" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="364dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/light_brown"
            android:text="Login" />

        <CheckBox
            android:id="@+id/cbTeacher"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Register as Teacher"
            app:layout_constraintEnd_toEndOf="@+id/login_password"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/cb_student"
            app:layout_constraintTop_toBottomOf="@+id/login_password" />

        <CheckBox
            android:id="@+id/cb_student"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Register as Student"
            app:layout_constraintStart_toStartOf="@+id/login_password"
            app:layout_constraintTop_toBottomOf="@+id/login_password" />


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>