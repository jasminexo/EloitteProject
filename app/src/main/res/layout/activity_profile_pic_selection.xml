<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePicSelectionActivity"
    android:background="@color/yellow_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40sp"
        android:background="@color/yellow_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customise your Profile Pet"
            android:textSize="20sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginTop="67dp"
                android:elevation="10dp"
                android:src="@drawable/fox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvProfilePicBackground"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="40dp"
                android:layout_height="350dp"
                android:background="@drawable/btn_round_corner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent " />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:text="Skin"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBear"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_brown"
                android:onClick="ivBearSelected"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <ImageView
                android:id="@+id/ivBear"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/bear"
                android:onClick="ivBearSelected"
                app:layout_constraintStart_toStartOf="@+id/tvBear"
                app:layout_constraintTop_toTopOf="@+id/tvBear" />

            <TextView
                android:id="@+id/tvPenguin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_beige"
                android:onClick="ivPenguinSelected"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/ivBear" />

            <ImageView
                android:id="@+id/ivPenguin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:onClick="ivPenguinSelected"
                android:src="@drawable/penguin"
                app:layout_constraintStart_toStartOf="@+id/tvPenguin"
                app:layout_constraintTop_toTopOf="@+id/tvPenguin" />

            <TextView
                android:id="@+id/tvFox"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_yellow"
                android:onClick="ivFoxSelected"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/ivPenguin" />

            <ImageView
                android:id="@+id/ivFox"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="1dp"
                android:onClick="ivFoxSelected"
                android:src="@drawable/fox"
                app:layout_constraintStart_toStartOf="@+id/tvFox"
                app:layout_constraintTop_toTopOf="@+id/tvFox" />

            <TextView
                android:id="@+id/tvBunny"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_orange"
                android:onClick="ivBunnySelected"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/ivFox" />

            <ImageView
                android:id="@+id/ivBunny"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:onClick="ivBunnySelected"
                android:src="@drawable/bunny"
                app:layout_constraintStart_toStartOf="@+id/tvBunny"
                app:layout_constraintTop_toTopOf="@+id/tvBunny" />

            <TextView
                android:id="@+id/tvHedgehog"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_purple"
                android:onClick="ivHedgehogSelected"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/ivBunny" />

            <ImageView
                android:id="@+id/ivHedgehog"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="1dp"
                android:onClick="ivHedgehogSelected"
                android:src="@drawable/hedgehog"
                app:layout_constraintStart_toStartOf="@+id/tvHedgehog"
                app:layout_constraintTop_toTopOf="@+id/tvHedgehog" />

            <TextView
                android:id="@+id/tvOwl"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_blue"
                android:onClick="ivOwlSelected"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/ivHedgehog" />

            <ImageView
                android:id="@+id/ivOwl"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:onClick="ivOwlSelected"
                android:src="@drawable/owl"
                app:layout_constraintStart_toStartOf="@+id/tvOwl"
                app:layout_constraintTop_toTopOf="@+id/tvOwl" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="40dp"
                android:layout_height="350dp"
                android:background="@drawable/btn_round_corner"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent " />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:text="Colour"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBrownColour"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="3dp"
                android:onClick="tvBrownSelected"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_brown"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />


            <TextView
                android:id="@+id/tvBeigeColour"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="3dp"
                android:onClick="tvBeigeSelected"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_beige"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/tvBrownColour" />

            <TextView
                android:id="@+id/tvYellowColour"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="3dp"
                android:onClick="tvYellowSelected"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_yellow"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/tvBeigeColour" />

            <TextView
                android:id="@+id/tvOrangeColour"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="3dp"
                android:onClick="tvOrangeSelected"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_orange"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/tvYellowColour" />

            <TextView
                android:id="@+id/tvPurpleColour"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="3dp"
                android:onClick="tvPurpleSelected"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_purple"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/tvOrangeColour" />

            <TextView
                android:id="@+id/tvBlueColour"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="3dp"
                android:onClick="tvBlueSelected"
                android:background="@drawable/btn_circle_large"
                android:backgroundTint="@color/circle_blue"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/tvPurpleColour" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:layout_marginTop="30dp"
            android:text="Save"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnStudentHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:layout_marginTop="30dp"
            android:onClick="goToStudentHomeActivity"
            android:text="STUDENT HOME"
            android:textColor="@color/white"/>


    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>